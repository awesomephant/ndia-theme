<!doctype html>
<html {{ site.language_attributes }}>

<head>
    <meta charset="{{ site.charset }}" />
    <meta name="description" content="{% if post.short_description %}{{post.short_description | e("html_attr")}}{% else %}{{site.description | e("html_attr")}}{% endif %}">
    <link rel="stylesheet" href="{{ site.theme.link }}/style.css?v={{theme.version}}" type="text/css" media="screen" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="author" href="{{ site.theme.link }}/humans.txt" />
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="profile" href="http://gmpg.org/xfn/11">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" type="image/png" sizes="32x32" href="{{theme.link}}/assets/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{theme.link}}/assets/favicon-16x16.png">
    
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{post.title | e("html_attr")}} — {{site.title | e("html_attr")}}">
    <meta property="og:title" content="{{post.title | e("html_attr")}} — {{site.title | e("html_attr")}}">
    <meta property="og:url" content="{{site.url}}">
    
    {% if post.short_description %}
        <meta property="og:description" content="{{post.short_description | e("html_attr")}}">
        <meta name="twitter:description" content="{{post.short_description | e("html_attr")}}}}">
    {% else %}
        <meta name="twitter:description" content="{{site.description | e("html_attr")}}">
        <meta property="og:description" content="{{site.description | e("html_attr")}}">
    {% endif %}

    {% if post.thumbnail %}
        <meta property="og:image"  content="{{post.thumbnail | resize(500)}}">
        <meta name="twitter:image" content="{{post.thumbnail | resize(500)}}">
        <meta name="twitter:image:alt" content="{{post.thumbnail.alt | e("html_attr")}}">
    {% else %}
        <meta property="og:image"  content="{{options.default_card_image.url | resize(500)}}">
        <meta name="twitter:image" content="{{options.default_card_image.url | resize(500)}}">
        <meta name="twitter:image:alt" content="{{options.default_card_image.alt}}">
    {% endif %}


    <style>
        @font-face {
            font-family: "Plex";
            src: url("{{theme.link}}/assets/IBMPlexSansVar-Roman.woff2") format("woff2-variations");
            font-weight: 100 700;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: "Plex";
            src: url("{{theme.link}}/assets/IBMPlexSansVar-Italic.woff2") format("woff2-variations");
            font-weight: 100 700;
            font-style: italic;
            font-display: swap;
        }
    </style>

    {{function('wp_head')}}