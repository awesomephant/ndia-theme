{% extends "base.twig" %}

{% block content %}
<article class="page__content">
	<h2 class="page__title">{{post.title}}</h2>
	<div class="page__main">
		{{post.content}}
	</div>
	<aside class="page__footer">
		Published {{post.date}}{% if post.date != post.modified_date%}, updated {{post.modified_date}}{% endif %}
	</aside>
</article>
{% endblock %}