{% block html_head_container %}

{% include 'html-header.twig' %}
{% block head %}
{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}" data-spacing="{{setting_spacing}}" data-font-size="{{setting_font_size}}" data-colour="{{setting_colour}}" data-template="base.twig">
	{% include "partial/debug.twig"%}
	<header class="header">
		{% block header %}
		<div class="row">

			<h1 class="header__title">
				<a href="{{site.url}}" rel="home" title="Home">
					{{site.title}}
				</a>
			</h1>
			<a class="skip-link" href="#content">{{ _e( 'Skip to content') }}</a>
		</div>
		<div class="site__logo">
			{% include "/partial/cover-pile.svg" %}
		</div>
		<!-- <img src="{{TimberImage(options.banner_image).src | resize(600)}}" alt=""> -->
		{% endblock %}
		<div class="nav__container">
			<span class="label" id="nav-label">Menu</span>
			<nav class="nav" aria-labelledby="nav-label">
				{% include "menu.twig" with {'items': menu_primary.get_items} %}
			</nav>
		</div>
		{% include "toolbar.twig" %}
	</header>


	<main id="content">
		{% block content %}
		Sorry, no content
		{% endblock %}
	</main>

	{% include 'footer.twig' %}
	{{ function('wp_footer') }}
	<script src="{{theme.link}}/dist/main.js?v={{theme.version}}"></script>
</body>

</html>